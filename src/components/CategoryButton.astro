---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="relative mb-16">
  <button class="bg-[#1a1a1a] text-white px-8 py-3 rounded-full font-medium hover:bg-gray-800 transition-colors">
    Para {text}
  </button>
  <div class="absolute w-full h-px bg-gray-200 top-1/2 -z-10"></div>
</div>